{% extends 'layoutPublic.html.twig' %}


{% block body %}

<style type="text/css">

  [class*="col"] { margin-bottom: 20px; }
  .modal-content{ margin-top: 10em;}
  .title{
    color: black;
  }
</style>
<div class="container" id="cont">
{% if app.session.flashbag.has('user-notice') %}
<div class="alert alert-success">
  {% for msg in app.session.flashbag.get('user-notice') %}
<button type="button" class="close" data-dismiss="alert" name="button">

<span aria-hidden="true">&times; </span><span class="sr-only">Close</span>
</button>
<a href="/" class="alert-link">{{ msg }}</a>

  {% endfor %}
</div>
{% endif %}

<section class="row">
            <div class="col-md-12" >
                <h3 class="row title"><span class="themecolor"> Contact</span></h3>
</section>

  <section class="row">
    <div class="col-lg-12 description-Admin">
      {{ form_start(form) }}
      <br>
      {{ form_row(form.name, {'attr':{'class':'form-control'}})}}
<br>
      {{ form_row(form.email, {'attr':{'class':'form-control'}})}}
      <br>
      {{ form_row(form.content, {'attr':{'class':'form-control'}})}}

<br>
    <button class="btn waves-effect waves-light"  type="submit">Envoyer</button><br>
</div>
      {{ form_end(form) }}
    </div>


  </section>

</div>



{% endblock %}
