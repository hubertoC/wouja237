{% extends 'layoutPublic.html.twig' %}


{% block body %}

<style type="text/css">

  [class*="col"] { margin-bottom: 20px; }
  .modal-content{ margin-top: 10em;}
  .title{
    color: black;
  }
</style>
<div class="container" id="cont">
{% if app.session.flashbag.has('user-notice') %}
<div class="alert alert-success">
  {% for msg in app.session.flashbag.get('user-notice') %}
<button type="button" class="close" data-dismiss="alert" name="button">

<span aria-hidden="true">&times; </span><span class="sr-only">Close</span>
</button>
<a href="/" class="alert-link">{{ msg }}</a>

  {% endfor %}
</div>
{% endif %}

<section class="row">
            <div class="col-md-12" >
                <h3 class="title"><span class="themecolor"> Reservation de:  </span>{{ name }}</h3>
</section>

  <section class="row">
    <div class="col-lg-12 description-Admin">
      {{ form_start(form) }}
      {{ form_row(form.name, {'attr':{'class':'form-control'}})}}
      {{ form_row(form.surname, {'attr':{'class':'form-control'}})}}

      {{ form_row(form.email, {'attr':{'class':'form-control'}})}}
      {{ form_row(form.number, {'attr':{'class':'form-control'}})}}
      {{ form_row(form.ville, {'attr':{'class':'form-control'}})}}
      {{ form_row(form.exigence, {'attr':{'class':'form-control'}})}}

      {{ form_row(form.dateDeReservation)}}
      <br>
      {{ form_row(form.save, {'attr':{'class':'btn waves-effect waves-light'}})}}
      <br>

      {{ form_end(form) }}
    </div>


  </section>

</div>



{% endblock %}
